{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "preserve",
    "moduleResolution": "bundler",
    "target": "esnext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noUncheckedSideEffectImports": true,
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"]
  }
}
