{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "node20",
    "target": "es2023",
    "allowImportingTsExtensions": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noUncheckedSideEffectImports": true,
    "resolveJsonModule": true,
    "erasableSyntaxOnly": true,
    "types": ["vitest/globals"]
  }
}
