{
  "private": true,
  "type": "module",
  "workspaces": [
    "express-zod-api",
    "example",
    "cjs-test",
    "esm-test",
    "issue952-test"
  ],
  "scripts": {
    "start": "bun -F example start",
    "prebuild": "tsx tools/contributors.ts && tsx tools/license.ts",
    "build": "bun -F express-zod-api build && bun -F example build",
    "postbuild": "tsx tools/make-tests.ts",
    "test": "bun -F express-zod-api test",
    "test:example": "bun -F example test",
    "test:oas": "bun -F example validate",
    "test:cjs": "bun -F cjs-test test",
    "test:esm": "bun -F esm-test test",
    "test:952": "bun -F issue952-test test",
    "bench": "bun -F express-zod-api bench",
    "lint": "eslint && prettier *.md --check",
    "mdfix": "prettier *.md --write",
    "precommit": "bun lint && bun run test && bun run build && git add *.md example/example.* LICENSE",
    "install_hooks": "husky"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/express-fileupload": "^1.5.0",
    "@types/http-errors": "^2.0.2",
    "@types/node": "^22.13.5",
    "@typescript-eslint/rule-tester": "^8.25.0",
    "@vitest/coverage-v8": "^3.0.7",
    "compression": "^1.7.4",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-allowed-dependencies": "^1.2.0",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^5.0.0",
    "express-fileupload": "^1.5.0",
    "http-errors": "^2.0.0",
    "husky": "^9.0.5",
    "prettier": "3.5.2",
    "tsx": "^4.19.3",
    "typescript": "^5.5.2",
    "typescript-eslint": "^8.25.0",
    "vitest": "^3.0.7",
    "zod": "^3.23.0"
  },
  "resolutions": {
    "**/@scarf/scarf": "npm:empty-npm-package@1.0.0"
  }
}
